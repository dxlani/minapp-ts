<van-progress
  percentage="75"
  pivot-text="紫色"
  pivot-color="#7232dd"
  color="linear-gradient(to right, #be99ff, #7232dd)"
/>
<!-- 横向 -->
<van-steps
  steps="{{ steps }}"
  active="{{ active }}"
/>
<!-- 竖向 -->
<van-steps
  steps="{{ steps }}"
  active="{{ active }}"
  direction="vertical"
  active-color="#f44"
/>
